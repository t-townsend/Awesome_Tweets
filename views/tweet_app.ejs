<%- include('./partials/header') %>

    <link
      rel="stylesheet"
      href="/css/tweets.css"
      type="text/css" media="screen" charset="utf-8">


  </head>

  <body>
    <header>
      <nav>
        <a class="nav-logo" href="/"><img src="images/chat icon.png"></img></a>
        <a class="nav-brand" href="/">Home</a>
        <a class="nav-brand2" href="/dashboard">Dashboard</a>
        <a class="nav-menu"><i class="fa fa-bars"></i></a>
      </nav>
    </header>
    <a class="nav-menu"><i class="fa fa-bars"></i></a>
      </nav>
    </header>


      <section class="posts">

        <div class="form">
          <div class="form-container">
          <form class="" action="/dashboard" method="post">
          <textarea id="username" name="username" placeholder="Username"></textarea>
          <br>
          <br>
          <textarea id="tweet" name="post" placeholder="Write a Tweet. Maximum 255 Characters." maxlength="255"></textarea>
          <br>
          <input id="submit" name="submit" type="submit"/>
          </div>
          </form>
        </div>



          <div class="post-info">
            <% if(tweets) { %>
              <% for (let tweet of tweets) { %>
                <div class="post-type">
                  <h3><%= `${tweet.username}` %></h3>
                  <p><%=`${tweet.post}` %></p>
                  <div class="post-title">
                    <%  let date = new Date(); %>
                    <h1><%=`${date}` %></h1>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>




<%- include('./partials/footer') %>
